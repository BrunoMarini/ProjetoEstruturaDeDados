#define _CRT_SECURE_NO_WARNINGS	
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <locale.h>

enum menuPrincipal {
	Cadastro = 1, Vinculamentos, Listagens, Cancelamentos, Sair
};
enum menuCadastros {
	cadastroAlunos = 1, cadastroMaterias, cadastroProfessor, sair
};
struct tipoAluno {
	char nome[50];
	int ra;
	bool materias[20];
};

struct tipoProfessor {
	char nome[50];
	int id;
	bool materias[20];
};

void matricula(tipoAluno*);

int main()
{
	menuPrincipal op;
	tipoAluno alunos[20];


	setlocale(LC_ALL, "Portuguese");

	printf("--- Matrícula de Alunos ---\n\n");
	printf("\t1. Cadastros;\n");
	printf("\t2. Vinculamentos;\n");
	printf("\t3. Listagens;\n");
	printf("\t4. Cancelamentos;\n");
	printf("\t5. Sair\n\n");
	printf("Digite a opção desejada: ");
	scanf("%i", &op);

	switch (op)
	{
	case Cadastro:
		matricula(alunos);
		break;
	case Vinculamentos:
		break;
	case Listagens:
		break;
	case Cancelamentos:
		break;
	case Sair:
		break;
	}

	system("pause");

	return 0;
}

void matricula(tipoAluno* alunos)
{
	menuCadastros op;

	printf("--- Cadastros ---\n\n");
	printf("\t1. Cadastro Alunos;\n");
	printf("\t2. Cadastro Matérias;\n");
	printf("\t3. Cadastro Professores;\n");
	printf("\t4. Voltar;\n\n");
	printf("Digite a opção desejada: ");
	scanf("%i", &op);

	system("cls");

	switch (op)
	{
	case cadastroAlunos:
		break;
	case cadastroMaterias:
		break;
	case cadastroProfessor:
		break;
	case sair:
		break;
	}

}
